/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  font-family: Helvetica;
}

.pageWrap{
  width: 92%;
  margin: 0 4%;
  height: 100%;
  position: fixed;
}

.header{
  height: 10%;
  position: absolute;
  top: 3%;
  text-transform: uppercase;
  display: flex;
  flex-direction: column;
}

.Date{
	font-size: 40rpx;
}

.Day{
  margin-top: 10rpx;
  font-size: 60rpx;
}

.content{
  width: 100%;
  height: 70%;
  position: absolute;
  top: 16%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
  box-shadow: 0 0 3px 3px rgb(245,245,245);
  color: rgb(53, 53, 53);
}

.home-recommend{
  border-radius: 20rpx;
  height: 50%;
  width: 94%;
  margin: 3% 0;
}

.rich-text-wrp {
  text-transform: uppercase;
	font-size: 30rpx;
  height: 7%;
  width: 94%;
  color: rgb(155,155,155);
}

.everyday-motto{
	font-family: Georgia, 'Times New Roman', Times, serif;
  font-size: 40rpx;
  width: 88%;
  height: 24%;
}

.motto{
  height: 65%;
  display: block;
  text-align: left;
}

.author{
  height: 35%;
  display: block;
  text-align: right;
}

.learn{
  position: absolute;
  height: 10%;
  width: 50%;
  bottom: 3%;
  background-color: rgb(18, 150, 219);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.learn.button-hover{
  background-color:rgba(18, 149, 219, 0.8);
}