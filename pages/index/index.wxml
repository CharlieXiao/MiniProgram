<!--index.wxml-->
<view class="home-page">
    <view class='header'>
        <text class='title'>motto\n</text>
        <text class='Date'>{{month}} {{day}} , {{week}}</text>
    </view>
    <view class='content'>
        <image class='home-recommend' src='../../image/boat.jpg' mode='widthFix'></image>
        <view class="rich-text-wrp">
            <text>{{ style }}</text>
            <rich-text nodes="<hr>" ></rich-text>
        </view>
        <view class='everyday-motto'>
            <text class='motto'>{{ motto }}</text>
            <text class='author'>{{ author }}</text>
        </view>
        <button class='learn'>{{ study }}</button>
    </view>
</view>
