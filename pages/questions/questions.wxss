/* pages/questions/questions.wxss */

.appInfo{
    margin: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.appName{
    font-size: 30rpx;
}

.appVersion{
    margin-top: 15rpx;
    font-size: 24rpx;
    color: rgb(180,180,180);
}

.appPic{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    box-shadow: 4px 4px 10px 0 rgb(180,180,180);
    margin-bottom: 20rpx;
}

.infoContainer{
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
}

.special-thanks{
    display: flex;
    flex-direction: column;
    margin: 20rpx 0;
}

.thanks-title{
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    margin-bottom: 20rpx;
}

.thanks-icon{
    height: 50rpx;
    width: 50rpx;
}

.thanks-title-text{
    margin-left: 10rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: rgb(100,100,100);
}

.thanks-detail{
    display: flex;
    flex-direction: column;
    margin: 10rpx 60rpx;
}

.thanks-reason{
    font-size: 28rpx;
    color: rgb(75,75,75);
}

.org-name{
    font-size: 32rpx;
    color: rgb(255,155,0);
    margin: 15rpx 0;
}

.seperate-line{
    border: solid 1px rgb(221,221,221);
    width: 100%;
}

.footer{
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}

.footer-text{
    margin-top: 20rpx;
    font-size: 24rpx;
    color: rgb(180,180,180);
}