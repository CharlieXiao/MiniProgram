<!--pages/userinfo/userinfo.wxml-->
<view class='infoPage'>
	<view class='userinfo' wx:if='{{!hasUserInfo && canIUse}}' >
		<!-- <image class='userinfo-avatar' src='../../image/default.png' mode='cover'></image> -->
		<button  open-type='getUserInfo' bindgetuserinfo='getUserInfo' class='loginButton'></button>
		<text class='userinfo-nickname'>点击头像登录</text>
	</view>
	<view class='userinfo' wx:else >
		<image class='userinfo-avatar' src='{{userInfo.avatarUrl}}' mode='cover'></image>
		<text class='userinfo-nickname'>{{userInfo.nickName}}</text>
	</view>	
</view>
