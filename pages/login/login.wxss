/* pages/login/login.wxss */
.loginPage{
  position: absolute;
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  display:  flex;
  flex-direction: column;
  align-items: center;
}

.app-info{
  position: fixed;
  top: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.8;
}

.app-logo{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  box-shadow: 4px 4px 10px 0 rgb(180,180,180);
}

.app-name{
  margin-top: 50rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 2px 2px 5px #000;
}

.back-image{
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: -1;
  top: 30%;
  opacity: 0.5;
}

.loginButton{
  position: fixed;
  top: 68%;
  height: 80rpx;
  width: 400rpx;
  background: -webkit-linear-gradient(left,rgba(18,150,219,0.7),rgb(18,150,219));
  box-shadow: 0 2px 10px 0px  rgba(18,150,219,0.4);
  /* background-color: rgb(18, 150, 219); */
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
}